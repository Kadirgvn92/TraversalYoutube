@model List<ContactUs>

<div class="col-md-6">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Son Gelen Mesajlar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Konu </th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.MessageDate).Take(7)) // burada ilk 7 tanesini göstermek için yapıyoruz
                        {
                            <tr>
                                <td class="align-middle">
                                    <span>@item.Name</span>
                                </td>
                                <td class="align-middle">@item.Subject</td>
                                <td class="align-middle">@item.MessageBody</td>
                                <td class="align-middle">@item.MessageDate.Date.ToShortDateString()
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-center bg-secondary text-primary">
            <a href="/Admin/Message/Index/">Tüm Mesajları Görüntüle</a>
        </div>
        <!-- /.card-footer -->
    </div>
</div>