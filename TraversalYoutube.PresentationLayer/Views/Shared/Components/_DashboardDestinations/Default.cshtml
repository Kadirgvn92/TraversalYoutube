@model List<Destination>

<div class="col-md-6">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Rotalar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th class="text-center">Rota</th>
                            <th>Gün / Gece </th>
                            <th>Rota Bilgileri</th>
                            <th>Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Take(4)) // burada ilk 4 tanesini göstermek için yapıyoruz
                        {
                            <tr>
                                <td class="align-middle">
                                    <img class="rounded-circle" src="@item.Image" width="80px" height="80px">
                                    &nbsp;
                                    <span>@item.City</span>
                                </td>
                                <td class="align-middle">@item.DayNight</td>
                                <td class="align-middle">@item.Description</td>
                                <td class="align-middle">
                                    <span class="badge badge-success text-md">@item.Price</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-center bg-warning text-primary">
            <a href="javascript:">Tüm Rezervasyonları Görüntüle</a>
        </div>
        <!-- /.card-footer -->
    </div>
</div>