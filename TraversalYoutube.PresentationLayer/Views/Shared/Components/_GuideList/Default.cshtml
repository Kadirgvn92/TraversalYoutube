
@model List<Guide>

<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0 text-primary">Tur Rehberleri</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach(var item in Model.Take(4))
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="@item.Image" alt="kal" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.Name</h6>
                            <p class="mb-0 text-xs">@item.Description</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;"></a>
                        <a class="btn btn-facebook btn-simple mb-0 ps-1 pe-2 py-0 ms-auto" href="/Guide/Index/">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a class="btn btn-twitter btn-simple mb-0 ps-1 pe-2 py-0" href="/Guide/Index/">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a class="btn btn-instagram btn-simple mb-0 ps-1 pe-2 py-0 text-primary" href="/Guide/Index/">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                    </li>
                }
                
            </ul>
        </div>
    </div>
</div>