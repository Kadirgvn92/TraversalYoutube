@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}



<!doctype html>
<html lang="zxx">

<link rel="stylesheet" href="~/Traversal-Liberty/assets/css/style-liberty.css">

<body>

    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Destinations </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Home</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Destinations </li>
                </ul>
            </div>
        </div>
    </section>

    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Destinations</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                
                                <a href="/Login/SignIn">
                                    <img src="/destinationimages/@item.Image" alt="" style="height:400px;width:382px" class="img-fluid">
                                    </a>
                                <div class="info">
                                    <h4><a href="/Login/SignIn">@item.City</a></h4>
                                    <p>@item.DayNight </p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlayan Fiyatlarla </h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>

    <script src="~/Traversal-Liberty/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/Traversal-Liberty/assets/js/theme-change.js"></script>
    <script src="~/Traversal-Liberty/assets/js/bootstrap.min.js"></script>

</body>

</html>
