

@model SendMessageDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Yazın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">

                @await Component.InvokeAsync("_ContactPartial")

                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" id="w3lName" placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" id="w3lSender" placeholder="Mail Adresiniz*" asp-for="Mail" class="contact-input" />
                                <span class="text-danger" asp-validation-for="Mail"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" id="w3lSubect" placeholder="Subject*" asp-for="Subject" class="contact-input" />
                                <span class="text-danger" asp-validation-for="Subject"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea id="w3lMessage" placeholder="Mesajınızı buraya yazabilirsiniz*" asp-for="MessageBody"></textarea>
                            <span class="text-danger" asp-validation-for="MessageBody"></span>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Konum</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>

