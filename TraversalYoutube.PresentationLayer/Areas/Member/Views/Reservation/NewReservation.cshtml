@model Reservation

@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 class="font-weight-bolder">Yeni Rezervasyon</h6>
                </div>
                <div class="card-body">
                    <form method="post" role="form text-left" id="ResForm">
                        <div class="mb-3">
                            @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <input type="text" required asp-for="PersonCount" class="form-control mb-2" placeholder="Kişi Sayısı" aria-label="Surname">
                        </div>
                        <div class="mb-3">
                            <input type="date" required asp-for="ReservationDate" class="form-control mb-2" placeholder="Username" aria-label="Username">
                        </div>
                        <div class="mb-3">
                            <textarea asp-for="Description" class="form-control mb-2" placeholder="Varsa eklemek istedikleriniz" aria-label="Email"></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" id="ResCreate" class="btn bg-gradient-dark w-100 my-4 mb-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Rezervasyon Oluştur</button>
                        </div>
                    </form>
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Rezervasyon Durumu Bilgilendirme !</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p> Rezervasyonunuz "Onay Bekliyor" durumundadır. Traversal ekibimiz reservasyon güncelleme işlemlerini Güncel Reservasyonlarım sayfasından takip edebilirsiniz</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary">Anladım</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Delay the modal display by 1 second (1000 milliseconds)
        setTimeout(function () {
            $('#staticBackdrop').modal('show');
        }, 1000);

        // Handle the modal close button click
        $('#staticBackdrop .btn-close').click(function () {
            // Close the modal
            $('#staticBackdrop').modal('hide');
        });

        // Handle the "Anladım" button click
        $('#staticBackdrop .btn-primary').click(function () {
            // Close the modal
            $('#staticBackdrop').modal('hide');
        });
    });
</script>
