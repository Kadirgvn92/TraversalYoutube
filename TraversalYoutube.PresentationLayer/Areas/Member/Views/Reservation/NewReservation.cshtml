@model Reservation

@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


<div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
    <div class="container-fluid">
        <div class="page-header min-height-150 border-radius-xl mt-4" style="background-image: url('/soft-ui-dashboard/assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
            <span class="mask bg-gradient-primary opacity-6"></span>
        </div>
        <div class="card card-body  mx-4 mt-n6">
            <div class="row gx-4">
                <div class="col-12 ">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6 class="font-weight-bolder">Yeni Rezervasyon</h6>
                        </div>
                        <div class="card-body">
                            <form method="post" role="form text-left" id="ResForm">
                                <div class="mb-3">
                                    @Html.DropDownListFor(x => x.DestinationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                </div>
                                <div class="mb-3">
                                    <input type="text" required asp-for="PersonCount" class="form-control mb-2" placeholder="Kişi Sayısı" aria-label="Surname">
                                </div>
                                <div class="mb-3">
                                    <input type="date" required asp-for="ReservationDate" class="form-control mb-2" placeholder="Username" aria-label="Username">
                                </div>
                                <div class="mb-3">
                                    <textarea asp-for="Description" class="form-control mb-2" placeholder="Varsa eklemek istedikleriniz" aria-label="Email"></textarea>
                                </div>
                                <div class="text-center">
                                    <button type="submit" id="ResCreate" class="btn bg-gradient-dark w-100 my-4 mb-2">Rezervasyon Oluştur</button>
                                </div>
                            </form>
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Rezervasyon Durumu Bilgilendirme !</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p> Rezervasyonunuz oluşturdukran sonra "Onay Bekliyor" durumunda olacaktır. Traversal ekibimiz reservasyon durumlarını kontrol edecektir. Rezervasyon onaylandığında size bilgi verilecektir ayrıca güncelleme işlemlerini Güncel Reservasyonlarım sayfasından takip edebilirsiniz.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary">Anladım</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Delay the modal display by 1 second (1000 milliseconds)
        setTimeout(function () {
            $('#staticBackdrop').modal('show');
        }, 1000);

        // Handle the modal close button click
        $('#staticBackdrop .btn-close').click(function () {
            // Close the modal
            $('#staticBackdrop').modal('hide');
        });

        // Handle the "Anladım" button click
        $('#staticBackdrop .btn-primary').click(function () {
            // Close the modal
            $('#staticBackdrop').modal('hide');
        });
    });
</script>
