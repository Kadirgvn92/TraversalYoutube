@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <br />
            <h4 class="page-title">Rehberler</h4>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rehber Ekranı</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Rehberlerin bilgilerini bu sayfada görüntüleyebilir ve güncelleyebilirsiniz
                            </div>
                            <br />
                            <table class="table align-items-center mb-0">

                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-primary text-sm font-weight-bolder text-center">Ad Soyad</th>
                                        <th class="text-uppercase text-primary text-sm font-weight-bolder  ps-2">Açıklama </th>
                                        <th class="text-uppercase text-primary text-sm font-weight-bolder ">Durum</th>
                                        <th class="text-uppercase text-primary text-sm font-weight-bolder ">Sil</th>
                                        <th class="text-uppercase text-primary text-sm font-weight-bolder ">Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody class="border-top">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td width="250px">
                                                <div class="d-flex flex-column align-items-center align-self-center mb-0 px-2 py-1">
                                                    <div>
                                                        <img src="@item.Image" class="rounded-circle me-3" style="width:60px;height:60px;" alt="user1">
                                                    </div>
                                                    <div class="mt-2">
                                                        <h6 class="p-0 mb-0 text-s">@item.Name</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <p class="text-s">@item.Description</p>
                                            </td>

                                            @if (item.Status == true)
                                            {
                                                <td class="align-middle">
                                                    <button href="#" class="btn btn-toggle btn-outline-warning">Pasif Yap</button>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="align-middle">
                                                    <button href="#" class="btn btn-toggle btn-outline-success">Aktif Yap</button>
                                                </td>
                                            }
                                            <td width="150px" class="align-middle">
                                                <a href="/Admin/Guide/DeleteGuide/@item.GuideID" class="btn bg-gradient-danger ">Sil</a>
                                            </td>
                                            <td width="150px" class="align-middle">
                                                <a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn bg-gradient-info ">Düzenle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <div>
                                <a href="/Admin/Guide/AddGuide" class="btn btn-primary">Yeni Rehber Ekleyin</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


