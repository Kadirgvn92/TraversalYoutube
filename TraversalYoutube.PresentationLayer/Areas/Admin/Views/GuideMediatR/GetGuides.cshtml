
@model GetGuideByIDQueryResult

@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Rehber Düzenleme Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="GuideID">
                        <div class="form-group">
                            <label>Rehber Adı Soyadı</label>
                            <input type="text" class="form-control form-control-s" asp-for="Name" placeholder="Rehber adını ve soyadını girin">
                        </div>
                        <div class="form-group">
                            <label>Rehber Açıklaması</label>
                            <input type="text" class="form-control form-control-s" asp-for="Description" placeholder="Rehber açıklamasını girin">
                        </div>
                        <button type="submit" class="btn btn-primary">Rehber Bilgilerini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>