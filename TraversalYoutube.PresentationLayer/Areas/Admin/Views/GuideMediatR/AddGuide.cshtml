
@model CreateGuideCommand

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Yeni Rehber Oluşturma Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post">
                        <div class="form-group">
                            <label>Rehber Ad Soyad</label>
                            <input type="text" class="form-control form-control-s" asp-for="Name" placeholder="Rehber Adı soyadı girin">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <input type="text" class="form-control form-control-s" asp-for="Description" placeholder="Açıklama girin">
                        </div>
                        <div class="form-group">
                            <label>Image</label>
                            <input type="text" class="form-control form-control-s" asp-for="Image" placeholder="Resim yükleyin">
                        </div>
                        <button type="submit" class="btn btn-primary">Rehber Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>