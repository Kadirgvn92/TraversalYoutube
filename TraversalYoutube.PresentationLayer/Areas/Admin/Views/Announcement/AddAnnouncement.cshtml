@model TraversalYoutube.DTOLayer.DTOs.AnnouncementDTOs.AnnouncementAddDTO

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Yeni Duyuru Oluşturma Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control form-control-s" asp-for="Title" placeholder="Duyuru Başlığı girin">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label>İçerik</label>
                            <input type="text" class="form-control form-control-s" asp-for="Content" placeholder="Duyuru içeriğini girin">
                            <span class="text-danger" asp-validation-for="Content"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly"></div>
                        <button type="submit" class="btn btn-primary">Duyuru Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


