@model Destination

@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Yeni Rota Oluşturma Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="DestinationID">
                        <div class="form-group">
                            <label>Rota</label>
                            <input type="text" class="form-control form-control-s" asp-for="City" placeholder="Rotayı girin">
                        </div>
                        <div class="form-group">
                            <label>Kaç Gece / Kaç Gün ?</label>
                            <input type="text" class="form-control form-control-s" asp-for="DayNight" placeholder="Gün / Gece bilgisini girin">
                        </div>
                        <div class="form-group">
                            <label>Fiyat</label>
                            <input type="text" class="form-control form-control-s" asp-for="Price" placeholder="Rota fiyatını girin">
                        </div>
                        <div class="form-group">
                            <label>Kapasite</label>
                            <input type="text" class="form-control form-control-s" asp-for="Capacity" placeholder="Rota kapasitesini girin">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <input type="text" class="form-control form-control-s" asp-for="Description" placeholder="Rota açıklamasını girin">
                        </div>
                        <div class="form-group">
                            <label>Detay-1</label>
                            <input type="text" class="form-control form-control-s" asp-for="Details1" placeholder="Rotanın 1.detayını girin">
                        </div>
                        <div class="form-group">
                            <label>Detay-2</label>
                            <input type="text" class="form-control form-control-s" asp-for="Details2" placeholder="Rotanın 2.detayını girin">
                        </div>
                        <div class="form-group">
                            <label>Rota Resmi Yükle</label>
                            <input required type="file" class="form-control-file" asp-for="Image">
                        </div>
                        <div class="form-group">
                            <label>Rota Kapak Resmi</label>
                            <input type="text" class="form-control form-control-s" asp-for="CoverImage" placeholder="Cover resim yolunu girin">
                        </div>
                        <div class="form-group">
                            <label>2.Rota Resmi</label>
                            <input type="text" class="form-control form-control-s" asp-for="Image2" placeholder="2.Resim yolunu girin">
                        </div>
                        <button type="submit" class="btn btn-primary">Rota Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>